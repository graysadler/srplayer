package {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.geom.Rectangle;		public class VolumeSlider extends MovieClip	{		public var currentVolume:Number = 1;		var dWidth:Number;				public function VolumeSlider()		{			// constructor code			this.scrollRect = new Rectangle(0, -(this.height / 2), this.width, this.height);			this.buttonMode = true;			this.addEventListener(MouseEvent.CLICK, snapTo);			dWidth = this.width;			setVolume(currentVolume);					}				function snapTo(event:MouseEvent):void		{			if (mouseX < 175 && mouseX > 0)			{				var pct:Number;				pct = mouseX / 175;				setVolume(pct);							}		}		function getVolume():Number		{			return currentVolume;		}		function toggleVol(event:MouseEvent):void		{			setVolume(0);		}		public function setVolume(pct:Number, isSilent:Boolean = false):void		{			if(pct > 1) {				pct = 1;			}			//volumeSliderFill.x = -(volumeSliderFill.width) + (volumeSliderFill.width * pct);			volumeSliderFill.width = (dWidth * pct);			currentVolume = pct;			if(isSilent == false) {				dispatchEvent(new Event("changeVolume", true, true));			}					}	}}