package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.ColorTransform;			public class LayoutOps extends MovieClip {				var curLayout:String;				public function LayoutOps() {			// constructor code						layout11.buttonMode = true;			layout21.buttonMode = true;			layout22.buttonMode = true;			layout23.buttonMode = true;			layout31.buttonMode = true;			layout32.buttonMode = true;			layout41.buttonMode = true;			layout42.buttonMode = true;			layout43.buttonMode = true;			layout51.buttonMode = true;			layout52.buttonMode = true;						layout11.addEventListener(MouseEvent.CLICK, layoutHandler);						layout21.addEventListener(MouseEvent.CLICK, layoutHandler);						layout22.addEventListener(MouseEvent.CLICK, layoutHandler);						layout23.addEventListener(MouseEvent.CLICK, layoutHandler);						layout31.addEventListener(MouseEvent.CLICK, layoutHandler);						layout32.addEventListener(MouseEvent.CLICK, layoutHandler);						layout41.addEventListener(MouseEvent.CLICK, layoutHandler);						layout42.addEventListener(MouseEvent.CLICK, layoutHandler);						layout43.addEventListener(MouseEvent.CLICK, layoutHandler);						layout51.addEventListener(MouseEvent.CLICK, layoutHandler);						layout52.addEventListener(MouseEvent.CLICK, layoutHandler);									layout11.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout11.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout21.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout21.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout22.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout22.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout23.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout23.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout31.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout31.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);						layout32.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout32.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout41.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout41.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout42.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout42.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout43.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout43.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);					layout51.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout51.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);								layout52.addEventListener(MouseEvent.MOUSE_OVER, hoverIn);			layout52.addEventListener(MouseEvent.MOUSE_OUT, hoverOut);							}				public function layoutHandler(e:Event):void {			var layout:String = e.target.name;			layout = layout.replace('layout','');			layout = layout.substr(0,1) + '-' + layout.substr(1,1);			curLayout = layout;			this.visible = false;			dispatchEvent(new Event("updateLayout", true, true));		}		function hoverIn(e:Event):void {			e.target.transform.colorTransform=new ColorTransform(0,0,0,1,7,157,217,0);		}		function hoverOut(e:Event):void {			e.target.transform.colorTransform=new ColorTransform();		}			}	}